<%- include('../partials/head') %>
<%- include('../partials/navbar') %>
<div class="container d-flex align-items-center justify-content-center py-5" style="min-height: 90vh;">
  <div class="glass-card p-4 shadow-lg w-100" style="max-width: 400px;" data-aos="fade-up">
    <h3 class="text-center glow-text mb-4">🔁 Reset Password</h3>

 

    <form method="POST" action="/reset-password">
      <input type="hidden" name="email" value="<%= email %>" />
      <div class="mb-3">
        <input name="otp" class="form-control bg-black text-info border-info" placeholder="Enter OTP" required />
      </div>
      <div class="mb-3">
        <input name="new_password" type="password" class="form-control bg-black text-info border-info" placeholder="New Password" required />
      </div>
      <button class="btn btn-glow w-100">Reset Password</button>
    </form>
  </div>
</div>
<%- include('../partials/footer') %>
