<!-- Counters -->
<script>
 document.querySelectorAll('.counter').forEach(c=>{
   const update=()=>{
     const target=+c.dataset.target, count=+c.innerText, inc=target/200;
     if(count<target){
       c.innerText=Math.ceil(count+inc);
       setTimeout(update,20);
     } else c.innerText=target;
   };
   update();
 });
</script>

